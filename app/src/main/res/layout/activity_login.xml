<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundWhiteBlack"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/jklu"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="JKLU Events"
            android:textColor="@color/blue"
            android:textSize="35sp"
            android:fontFamily="@font/roboto_medium"
            android:textStyle="bold"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textFieldEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="E-mail"
            android:layout_margin="20dp"
            android:textColorHint="@color/orange"
            app:boxStrokeColor="@color/orange"
            app:boxCornerRadiusBottomEnd="10dp"
            app:hintTextColor="@color/orange"
            app:boxBackgroundColor="@color/backgroundCreamGrey"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:startIconDrawable="@drawable/mail"
            app:startIconTint="@color/lightBlue"
            app:endIconTint="@color/black"
            app:expandedHintEnabled="false"
            app:suffixText=".jklu.edu.in"
            app:suffixTextColor="@color/black"
            app:suffixTextAppearance="@style/TextAppearance.AppCompat.Caption"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="@font/roboto_light"
                android:inputType="textEmailAddress"
                android:imeOptions="actionNext" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textFieldPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Password"
            android:layout_margin="20dp"
            android:textColorHint="@color/orange"
            app:boxStrokeColor="@color/orange"
            app:boxCornerRadiusBottomEnd="10dp"
            app:hintTextColor="@color/orange"
            app:boxBackgroundColor="@color/backgroundCreamGrey"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:startIconDrawable="@drawable/lock"
            app:startIconTint="@color/lightBlue"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="@font/roboto_light"
                android:inputType="textPassword"
                android:imeOptions="actionNext" />


        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="356dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="end"
            android:text="@string/forgot_password"
            android:textColor="@color/orange"
            android:textSize="16sp" />

        <Button
            android:id="@+id/textButton"
            android:layout_width="365dp"
            android:layout_height="70dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/orange"
            android:text="@string/sign_in"
            android:textColor="@color/textWhiteBlack"
            android:textSize="20sp"
            app:cornerRadius="20dp"
            android:fontFamily="@font/roboto_light"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:text="@string/by_creating_account_you_confirm_that_you_accept_our_1"
            android:textColor="@color/textBlackWhite"
            android:textSize="15sp"
            android:textStyle="normal"
            android:fontFamily="@font/roboto_light"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/terms_of_use_privacy_policy_1"
            android:textColor="@color/orange"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_light"/>

    </LinearLayout>

</ScrollView>

